@model IEnumerable<ConstructoraUdeC.Models.ParametersModule.ProjectModel>
<link href="~/Content/Home.css" rel="stylesheet" />
@{
    ViewBag.Title = "Home Page";
}

@foreach (var p in Model)
{
    
    


<div class="container mt-2">
  
    <div class="row">
        <div class="col-md-3 col-sm-6">
            <div class="card card-block">
                <h2 class="card-title text-right"><i class="material-icons">@Html.Raw(p.Name)</i></h2>
                <img src="@Html.Raw(p.Image)">
                <p class="card-text">@Html.Raw(p.Description)</p>
                <h5>@Html.ActionLink("Info", "Info","Project", new { id = p.Id },null)</h5>
                 <br />

            </div>
        </div>
        
    </div>

</div>
}


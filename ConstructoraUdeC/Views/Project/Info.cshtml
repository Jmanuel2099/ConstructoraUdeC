@model ConstructoraUdeC.Models.ParametersModule.ProjectModel
<link href="~/Content/Info.css" rel="stylesheet" />


<div id="container">

 
    <div class="product-details">

        <h1>@Html.DisplayFor(modelItem => Model.Name)</h1>
        <h4>Situada en la ciudad de @Html.DisplayFor(modelItem => Model.City.Name) </h4>
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <div class="form-group  center-block">
                <input type="submit" value="Ver catalogo" class="btn btn-default" />
            </div>

        }

    </div>
    <div class="product-image">

        <img src="@Html.DisplayFor(modelItem => Model.Image)" alt="">
        <div class="info">
            <h2>Descripción</h2>
                <p>@Html.DisplayFor(modelItem => Model.Description)</p>

        </div>
    </div>
    <!--  End product image  -->


</div>



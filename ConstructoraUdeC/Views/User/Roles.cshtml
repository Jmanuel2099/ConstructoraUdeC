@model ConstructoraUdeC.Models.SecurityModule.UserRoleModel

@{
    ViewBag.Title = "Eliminar";
}

<h2>Roles de usuario</h2>


<div>
    

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.SelectedRoles, new { @id= "txtSelectedRoles"})
        @Html.HiddenFor(model => model.UserId)

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nombre Rol
                    </th>
                    <th>
                        Seleccion
                    </th>
                </tr>
            </thead>
            <tbody>
                @{ 
                    List<string> selectedRoles = Model.SelectedRoles.Split(',').ToList();
                }

                @foreach (var role in Model.RoleList)
                {
                    <tr>
                        <td>
                            <strong>@role.Name</strong>
                        </td>
                        <td>
                            @Html.CheckBox("Role", (selectedRoles.Contains(role.Id.ToString())), new { @id = role.Id, @class="roleList", @onclick= "refreshSelectedRoles()" })
                        </td>
                    </tr>

                }
            </tbody>
        </table>

        <div class="form-actions no-color">
            <input type="submit" value="Guardar" class="btn btn-danger" /> |
            @Html.ActionLink("Regresar", "Index")
        </div>
    }
</div>

<script type="text/javascript">
    function refreshSelectedRoles() {
        let selected = [];
        $(".roleList").each((index, elem) => {
            if ($(elem).is(":checked")) {
                let id = $(elem).attr("id");
                selected.push(id);
            }
        }).promise().done(function () {
            $("#txtSelectedRoles").val(selected.join(","));
        });


    }
</script>